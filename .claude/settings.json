{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "mcp__firecrawl__*",
      "mcp__tavily__*",
      "mcp__Ref__*",
      "mcp__vibe-check__*",
      "mcp__pal__*",
      "Bash(python:*)",
      "Bash(cat:*)",
      "Bash(set)",
      "Bash(echo:*)",
      "Bash(git:*)",
      "mcp__firecrawl__firecrawl_search",
      "mcp__Ref__ref_search_documentation",
      "mcp__firecrawl__firecrawl_scrape",
      "mcp__Ref__ref_read_url",
      "mcp__tavily__tavily_search",
      "Bash(claude:*)",
      "Bash(which:*)",
      "WebFetch(domain:*)"
    ]
  },
  "enabledMcpjsonServers": [
    "firecrawl",
    "tavily",
    "Ref",
    "vibe-check",
    "pal"
  ],
  "hooks": {
    "PreToolUse": [],
    "PostToolUse": [],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "f=\"${CLAUDE_PROJECT_DIR}/on_notification.wav\"; [ -f \"$f\" ] && /mnt/c/Windows/System32/WindowsPowerShell/v1.0/powershell.exe -NoProfile -Command \"(New-Object Media.SoundPlayer '$(wslpath -w \"$f\")').PlaySync()\" 2>/dev/null; true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "f=\"${CLAUDE_PROJECT_DIR}/on_stop.wav\"; [ -f \"$f\" ] && /mnt/c/Windows/System32/WindowsPowerShell/v1.0/powershell.exe -NoProfile -Command \"(New-Object Media.SoundPlayer '$(wslpath -w \"$f\")').PlaySync()\" 2>/dev/null; true"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash .claude/statusline.sh"
  },
  "enabledPlugins": {
    "plugin-dev@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "claude-code-setup@claude-plugins-official": true,
    "hookify@claude-plugins-official": true
  }
}
